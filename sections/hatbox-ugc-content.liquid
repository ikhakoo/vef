{%
  render 'hatbox-ugc-content',
  section: section.settings,
  blocks: section.blocks,
%}

{% schema %}
{
  "name": "Hatbox UGC Content",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Shape title"
    },
    {
      "type": "text",
      "id": "slider_title",
      "label": "Title"
    }
  ],
  "max_blocks": 8,
  "blocks": [
    {
      "name": "Slide",
      "type": "slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "video",
          "id": "video",
          "label": "Video (optional)"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text"
        },
        {
          "type": "url",
          "id": "url",
          "label": "URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hatbox UGC Content"
    }
  ],
  "enabled_on": {
    "templates": ["page"]
  }
}
{% endschema %}