{
  "name": "Navigation",
  "settings": [
    {
      "type": "link_list",
      "id": "navigation",
      "label": "Header Navigation"
    },
    {
      "type": "url",
      "id": "ancillary_url_1",
      "label": "Ancillary Navigation Item Url 1",
      "info": "Will exist top left of desktop and last items in footer of mobile flyout."
