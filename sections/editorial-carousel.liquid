{% render 'editorial-carousel',
  settings: section.settings,
  blocks: section.blocks
%}

{% schema %}
{
  "name": "Editorial Carousel",
  "settings": [
    {
      "type": "text",
      "id": "header",
      "label": "Editorial Title"
    },
    {
      "type": "text",
      "id": "caption",
      "label": "Editorial Caption"
    },
    {
      "type": "textarea",
      "id": "subheader",
      "label": "Editorial Subheader"
    },
    {
      "type": "url",
      "id": "url",
      "label": "Editorial Link"
    },
    {
      "type": "text",
      "id": "url_text",
      "label": "Editorial Link Text"
    },
    {
      "type": "select",
      "id": "background_color",
      "label": "Carousel Background Color",
      "options": [
        {
          "value": "white",
          "label": "White"
        },
        {
          "value": "black",
          "label": "Black"
        },
        {
          "value": "#EB59a9",
          "label": "pink"
        },
        {
          "value": "#388A96",
          "label": "teal"
        },
        {
          "value": "#8F9DAC",
          "label": "dusty blue"
        },
        {
          "value": "#BAD5E3",
          "label": "powder blue"
        },
        {
          "value": "#F2716D",
          "label": "coral"
        },
        {
          "value": "#F0B9A8",
          "label": "peach"
        },
        {
          "value": "#82BFB9",
          "label": "emerald"
        },
        {
          "value": "#65B4E0",
          "label": "electric blue"
        },
        {
          "value": "#DCE8E7",
          "label": "seafoam green"
        },
        {
          "value": "#F5EBED",
          "label": "powder pink"
        },
        {
          "value": "#D8D5E3",
          "label": "soft lavender"
        },
        {
          "value": "#C4B0A9",
          "label": "cocoa"
        },
        {
          "value": "#E5D9D3",
          "label": "latte"
        },
        {
          "value": "#F5F1ED",
          "label": "cream"
        }
      ],
      "default": "#F5EBED"
    }
  ],
  "blocks": [
    {
      "type": "carousel-block",
      "name": "Carousel Block Contents",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Carousel Block Image"
        },
        {
          "type": "text",
          "id": "video_url",
          "label": "Editorial Video (overrides image)"
        },
        {
          "type": "select",
          "id": "alignment",
          "label": "Carousel Text Alignment",
          "options": [
            {
              "value": "left:flex-start",
              "label": "Left"
            },
            {
              "value": "center",
              "label": "Center"
            },
            {
              "value": "right:flex-end",
              "label": "Right"
            }
          ],
          "default": "center"
        },
        {
          "type": "textarea",
          "id": "quote",
          "label": "Carousel Block Quote"
        },
        {
          "type": "image_picker",
          "id": "logo",
          "label": "Carousel Block Logo"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Editorial",
      "category": "Homepage"
    }
  ],
  "templates": [
    "index"
  ]
}
{% endschema %}
