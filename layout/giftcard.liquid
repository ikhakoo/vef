<!doctype html>
<html lang="{{- request.locale.iso_code -}}" dir="ltr">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">
    <meta name="format-detection" content="telephone=no">
    <title>{{- 'gift_cards.issued.title' -}}</title>
    <meta name="description" content="{{- 'gift_cards.issued.subtext' -}}">

    {%- if canonical_url != blank -%}
      <link rel="canonical" href="{{ canonical_url }}">
    {%- endif -%}

    {%- liquid
      render 'head-metas'
      render 'head-settings'
    -%}

    {{ content_for_header }}
  </head>
  <body class="layout-giftcard template-{{- template.name -}}{%- if template.suffix -%}-{{- template.suffix -}}{%- endif -%}">
    <a role="button" href="#main-content">
      Skip to content
    </a>

    <main id="main-content" role="main">
      {{ content_for_layout }}
    </main>
  </body>
</html>
