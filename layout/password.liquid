<!doctype html>
<html lang="{{- request.locale.iso_code -}}" dir="ltr">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">

    {%- liquid
      render 'head-seo'
      render 'head-metas'
      render 'head-settings'
    -%}

    {% render 'asset-tags', layout: 'password' %}

    {{ content_for_header }}
  {{ 'patrol-accessibility.css' | asset_url | stylesheet_tag }}
</head>
  <body class="layout-password template-{{- template.name -}}{%- if template.suffix -%}-{{- template.suffix -}}{%- endif -%}">
    <a role="button" href="#main-content">
      Skip to content
    </a>

    <main id="main-content" role="main">
      {{ content_for_layout }}
    </main>
  </body>
</html>
