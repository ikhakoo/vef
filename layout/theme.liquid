<!doctype html>
<html lang="{{- request.locale.iso_code -}}" dir="ltr">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no,maximum-scale=1">

  {% if template == 'list-collections' %}
    <meta name="robots" content="noindex">
  {% endif %}

  {%- liquid
    render 'head-seo'
    render 'head-metas'
    render 'head-settings'
    render 'swatches-css'
    render 'head-scripts'
  -%}

  {%- render 'asset-tags', layout: 'theme' -%}

  {% if template.directory == 'customers' or template == 'cart' %}
    <script async src="{{ 'shopify_common.js' | shopify_asset_url }}"></script>
    <script async src="{{ 'customer_area.js' | shopify_asset_url }}"></script>
  {% endif %}

  <script async src="{{ 'option_selection.js' | shopify_asset_url }}"></script>

  {{ content_for_header }}

  <!-- Start of LittledataLayer -->
  {% comment %}{% include 'littledata-layer' %}{% endcomment %}
  <!-- End of LittledataLayer -->

  {% if settings.ab_hide != blank %}
    <style>
      {{ settings.ab_hide }} {
        display: none;
      }
    </style>
  {% endif %}
</head>

<body
  class="layout-theme template-{{- template.name -}}{%- if template.suffix -%}-{{- template.suffix -}}{%- endif -%}">

  {% comment %}
    <a
      href="#"
      class="UsableNetAssistive UsableNetAssistive--mobile caption"
      onclick="return enableUsableNetAssistive()"
    >
      Enable Accessibility
    </a>  
  {% endcomment %}

  {%- unless template contains "index" and settings.promo_top_of_page_placement == false -%}
    {% if settings.promo_type != 'none' %}
      {% render 'promobar' %}
    {% endif %}
  {%- endunless -%}

  {%- render 'header' -%}
  {%- render 'underlay-helper' -%}

  <main id="main-content" role="main">
    <div data-component="Inview">
      {{ content_for_layout }}
    </div>
  </main>

  {%- section 'footer' -%}

  {%- render 'mini-cart' -%}

  {%- render 'account-drawer' -%}

  {%- render 'quick-shop' -%}

  {%- render 'footer-scripts' -%}

</body>
</html>
