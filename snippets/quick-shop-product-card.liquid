{% liquid
  assign c = "QuickShopProductCard"
  assign image_component_class = c | append: '__image-wrap'
  assign image_class = c | append: '__image'
%}

<div
  class="{{c}}"
  data-component="{{c}}"
>
  <div class="{{c}}__card">
    {%
      render 'image',
      component_class: image_component_class,
      class: image_class,
      image: settings.card_image,
      sizes: '0'
    %}

    <div class="{{c}}__title body-s js-quickShopCardTitle">
      {{ settings.card_title }}
    </div>
  </div>

  <div class="{{c}}__message-wrap">
    <textarea
      class="{{c}}__textarea body js-quickShopCardMessage"
      placeholder="{{ settings.card_message_placeholder }}"
      aria-label="Enter your gift card message"
      rows="4"
      maxlength="125"
    ></textarea>
  </div>

  <button
    class="{{c}}__clear-btn js-quickShopCardMessageClear"
    aria-label="Clear message and remove card"
  >
    <span class="body-s">
      {{ settings.card_message_clear_btn }}
    </span>
  </button>
</div>
